<!doctype html>
<html class="no-js" lang="">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<% include ../partials/head-tag %>

<body>

    <% const isActive = "class"; %>

    <!-- Preloader End Here -->
    <div id="wrapper" class="wrapper bg-ash">

        <!-- Header Menu Area Start Here -->
        <% include ../partials/header %>
        <!-- Header Menu Area End Here -->

        <!-- Page Area Start Here -->
        <div class="dashboard-page-one">
            <!-- Sidebar Area Start Here -->
            <% include ../partials/sidebar %>
            <!-- Sidebar Area End Here -->
            <div class="dashboard-content-one">
                <!-- Breadcubs Area Start Here -->
                <div class="breadcrumbs-area">
                    <h3>Classroom</h3>
                    <ul>
                        <li>
                            <a href="/teachers">Home</a>
                        </li>
                        <li>Edit a Classroom</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- Add New Classroom Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>Edit a Classroom</h3>
                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                                    aria-expanded="false">...</a>

                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#"><i
                                            class="fas fa-times text-orange-red"></i>Close</a>
                                    <a class="dropdown-item" href="#"><i
                                            class="fas fa-cogs text-dark-pastel-green"></i>Edit</a>
                                    <a class="dropdown-item" href="#"><i
                                            class="fas fa-redo-alt text-orange-peel"></i>Refresh</a>
                                </div>
                            </div>
                        </div>
                        <div class="dismiss-alart">
                            <% include ../partials/message %>
                        </div>
                        <br>
                        <form method="POST" action="<%= classroom.id; %>" class="new-added-form">
                            <div class="row">
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>Classroom Name *</label>
                                    <input type="text" name="name" class="form-control" required
                                        value="<%= classroom.name; %>">
                                </div>

                                <div class="col-xl-3 col-lg-9 col-12 form-group">
                                    <label>Class Teacher *</label>
                                    <select name="teacher_id" class="select2">
                                        <option>Please Select Teacher *</option>
                                        <% teachers.forEach(function (teacher, index, arr){ %>
                                        <option value="<%= teacher.id %>"
                                            <%= (typeof classroom !== 'undefined'  && classroom.teacher_id == teacher.id ) ? selected="selected" : ''  %>>
                                            <%= teacher.firstname + " " + teacher.lastname %>
                                        </option>
                                        <%}); %>
                                    </select>
                                </div>


                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label>Year</label>
                                    <input type="number" name="year" placeholder="Classroom Year" class="form-control"
                                        value="<%= classroom.year; %>">
                                </div>


                                <div class="col-12 form-group mg-t-8">
                                    <button type="submit"
                                        class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Update</button>
                                    <button type="reset"
                                        class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Add New Classroom Area End Here -->
                <% include ../partials/footer-tag %>
            </div>
        </div>
        <!-- Page Area End Here -->
    </div>
    <!-- jquery-->
    <% include ../partials/js-files %>

</body>

</html>