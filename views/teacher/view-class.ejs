<!doctype html>
<html class="no-js" lang="">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<% include ../partials/head-tag %>

<body>

    <% const isActive = "class"; %>


    <div id="wrapper" class="wrapper bg-ash">

        <!-- Header Menu Area Start Here -->
        <% include ../partials/header %>
        <!-- Header Menu Area End Here -->

        <!-- Page Area Start Here -->
        <div class="dashboard-page-one">
            <!-- Sidebar Area Start Here -->
            <% include ../partials/sidebar %>
            <!-- Sidebar Area End Here -->
            <div class="dashboard-content-one">
                <!-- Breadcubs Area Start Here -->
                <div class="breadcrumbs-area">
                    <h3>classroom</h3>
                    <ul>
                        <li>
                            <a href="/teachers">Home</a>
                        </li>
                        <li>Class Details</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- Classroom Details Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3> <%= classroom.name; %> classroom</h3>
                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                                    aria-expanded="false">...</a>


                            </div>
                        </div>
                        <div class="single-info-details">
                            <div class="item-img">
                                <img src="<%= classroom.photo %>" alt="Classroom Photo">
                            </div>
                            <div class="item-content">
                                <div class="header-inline item-header">
                                    <h2></h2>
                                    <h3 class="text-dark-medium font-medium"></h3>
                                    <div class="header-elements">
                                        <ul>
                                            <li><a href="/teachers/edit-class/<%= classroom.id %>"><i
                                                        class="far fa-edit"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="info-table table-responsive">
                                    <table class="table text-nowrap">
                                        <tbody>

                                            <tr>
                                                <td>Class Name:</td>
                                                <td class="font-medium text-dark-medium"><%= classroom.name; %></td>
                                            </tr>
                                            <tr>
                                                <td>Teacher's Name:</td>
                                                <td class="font-medium text-dark-medium"><%= classroom.teachername; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Year Created:</td>
                                                <td class="font-medium text-dark-medium"><%= classroom.year; %></td>
                                            </tr>

                                            <tr>
                                                <td>Description:</td>
                                                <td style="max-width: 400px;" class="font-medium text-dark-medium">
                                                    <%= classroom.description %>
                                                </td>
                                            </tr>


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- CLASS
                     Details Area End Here -->
                <% include ../partials/footer-tag %>
            </div>
        </div>
        <!-- Page Area End Here -->
    </div>
    <!-- jquery-->
    <% include ../partials/js-files %>

</body>

</html>