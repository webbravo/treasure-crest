<!doctype html>
<html class="no-js" lang="">
<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
<% include ../partials/head-tag %>

<body>

    <% const isActive = "student"; %>

    <div id="wrapper" class="wrapper bg-ash">

        <!-- Header Menu Area Start Here -->
        <% include ../partials/header %>
        <!-- Header Menu Area End Here -->

        <!-- Page Area Start Here -->
        <div class="dashboard-page-one">
            <!-- Sidebar Area Start Here -->
            <% include ../partials/sidebar %>
            <!-- Sidebar Area End Here -->
            <div class="dashboard-content-one">
                <!-- Breadcubs Area Start Here -->
                <div class="breadcrumbs-area">
                    <h3>Students</h3>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>Student Details</li>
                    </ul>
                </div>
                <!-- Breadcubs Area End Here -->
                <!-- Student Details Area Start Here -->
                <div class="card height-auto">
                    <div class="card-body">
                        <div class="heading-layout1">
                            <div class="item-title">
                                <h3>About Student</h3>
                            </div>
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                                    aria-expanded="false">...</a>


                            </div>
                        </div>
                        <div class="single-info-details">
                            <div class="item-img">
                                <img style="max-width: 200px;" src="<%= student.photo %>" alt="student">
                            </div>
                            <div class="item-content">
                                <div class="header-inline item-header">
                                    <h2><%= student.firstname + " " +student.lastname; %></h2>
                                    <h3 class="text-dark-medium font-medium"></h3>
                                    <div class="header-elements">
                                        <ul>
                                            <li><a href="/teachers/edit-student/<%= student.id %>"><i
                                                        class="far fa-edit"></i></a></li>
                                            <li><a href="#"><i class="fas fa-print"></i></a></li>
                                            <li><a href="#"><i class="fas fa-download"></i></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="info-table table-responsive">
                                    <table class="table text-nowrap">
                                        <tbody>
                                            <tr>
                                                <td>Admission / Pupil ID :</td>
                                                <td class="font-medium text-dark-medium"> <%= student.student_id; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Name:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.firstname + " " + student.middlename + " " + student.lastname; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Class:</td>
                                                <td class="font-medium text-dark-medium"><%= classroom.name; %></td>
                                            </tr>
                                            <tr>
                                                <td>Gender:</td>
                                                <td class="font-medium text-dark-medium"> <%= student.gender %> </td>
                                            </tr>
                                            <tr>
                                                <td>Date of birth:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.dob; %>
                                                    (<%=  helpers.calculateAge(student.dob) + " " + "years old"; %>)
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Nationality:</td>
                                                <td class="font-medium text-dark-medium"><%= student.nationality; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>State of Origin:</td>
                                                <td class="font-medium text-dark-medium"><%= student.state_origin; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>LGA of Origin:</td>
                                                <td class="font-medium text-dark-medium"><%= student.lga_origin; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Hometown:</td>
                                                <td class="font-medium text-dark-medium"><%= student.hometown; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Previous School:</td>
                                                <td class="font-medium text-dark-medium"><%= student.previous_school; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Reason for Leaving :</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.reason_for_leaving; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Religion:</td>
                                                <td class="font-medium text-dark-medium"><%= student.religion; %></td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <h4 style="margin: 0;" class="">Admission Details</h4>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Admission Term:</td>
                                                <td class="font-medium text-dark-medium"><%= student.term; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Academic Session :</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.academic_session; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Admission Date :</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.admission_date; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <h4 style="margin: 0;" class="">Parent details</h4>
                                                </td>
                                            </tr>


                                            <tr>
                                                <td>Mother Name:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= parent1.firstname + " "+ parent1.lastname; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Father Name:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= typeof parent2.firstname  === 'undefined' ? "No Parent selected" :
                                                     parent2.firstname + " "+ parent2.lastname; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Mother's Occupation:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= parent1.occupation; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Father's Occupation:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= typeof parent2.occupation  === 'undefined' ? "No Parent selected" :
                                                        parent2.occupation; %>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Phone(Mom and Dad):</td>
                                                <td class="font-medium text-dark-medium">
                                                    <a href="tel:<%= parent1.phone ; %>">
                                                        <%= parent1.phone ; %>
                                                    </a>
                                                    <%= typeof parent2.phone === 'undefined' ? "" : parent2.phone; %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Email(Mom and Dad):</td>
                                                <td class="font-medium text-dark-medium"><%= parent1.email ; %> /
                                                    <%= typeof parent2.email === 'undefined' ? "" : parent2.email; %>
                                                </td>
                                            </tr>


                                            <tr>
                                                <td>Address:</td>
                                                <td class="font-medium text-dark-medium">
                                                    <%= student.address; %>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Student Details Area End Here -->
                <% include ../partials/footer-tag %>
            </div>
        </div>
        <!-- Page Area End Here -->
    </div>
    <!-- jquery-->
    <% include ../partials/js-files %>

</body>

</html>