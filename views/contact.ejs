                        <form action="/sendmail" method="post">
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" name="name" placeholder="Your Name *" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="email" name="email" placeholder="Your Email *" required>
                                </div>
                            </div>
                            <input type="text" name="subject" placeholder="Subject *">
                            <textarea name="message" class="yourmessage" placeholder="Your message" required></textarea>
                            <div class="form-group">
                                <div class="form-field">
                                    <div class="g-recaptcha" data-sitekey="6LcJ66EUAAAAAIoHHGeWL-yBBcHqtPPE9BnKjq6s">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="button-default button-yellow"><i
                                    class="fa fa-send"></i>Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
